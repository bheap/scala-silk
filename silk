#!/bin/bash

cleaner () {
  sp=`ps -A | grep 'silk.jar -t preview' | grep -v grep | awk '{print $1}'`
  if [ $sp > 0 ]; then
    kill $sp
  fi
}

SK=$HOME/.silk
SKPS=$SK/repositories/prototype-site
if [ "$1" == "preview-start" ]; then
  cleaner
  java -jar $HOME/bin/silk.jar -t preview-start &
elif [ "$1" == "preview-stop" ]; then
  echo "Silk preview is stopped."
  cleaner
elif [ "$1" == "sites" ]; then
  echo "Installed prototype-sites are:"
  find $SKPS -type f -name dna.xml -exec grep 'id' {} \;
elif [ "$1" == "update" ]; then
	mkdir -p $SKPS
	curl "http://www.bheap.co.uk/downloads/silk/updates/0.1.0/prototype-site-dna.tgz" \
	        > prototype-site-dna.tgz
	tar xf prototype-site-dna.tgz -C $SKPS
	rm prototype-site-dna.tgz
  echo "Silk update complete"
else
  java -jar $HOME/bin/silk.jar -t $1 $2
fi

